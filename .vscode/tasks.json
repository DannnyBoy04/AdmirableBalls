{
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "'@compile_flags.txt'",
                "-lmsvcrt",
                "-lraylib",
                "-lgdi32",
                "-lwinmm",
                "-Llib",
                "./src/main.c",
                "-o",
                "balls"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./balls",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ],
        },
    ],
    "version": "2.0.0",
}